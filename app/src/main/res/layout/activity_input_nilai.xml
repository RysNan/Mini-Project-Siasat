<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InputNilaiActivity">

    <LinearLayout
        android:id="@+id/headerLayoutNilai"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/textViewNilaiNamaMk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Input Nilai: Nama Mata Kuliah"
            android:textSize="22sp"
            android:textStyle="bold" />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewNilai"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/headerLayoutNilai"
        android:layout_above="@id/buttonSimpanNilai"
        android:paddingHorizontal="16dp"
        tools:listitem="@layout/list_item_nilai" />

    <Button
        android:id="@+id/buttonSimpanNilai"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="16dp"
        android:text="Simpan Semua Nilai" />

</RelativeLayout>